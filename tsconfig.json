{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "rootDir": "./",
    // "outDir": "lib",
    "sourceMap": true,
    "target": "ES2020",
    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true, 
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
     ],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
}